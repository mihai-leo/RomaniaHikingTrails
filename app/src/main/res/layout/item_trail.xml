<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/whatsapp_image_2024_11_22_at_02_10_23">

    <TextView
            android:id="@+id/textViewTrailInfo"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:text="Difficulty: Medium | Distance: 10km"
            app:layout_constraintStart_toEndOf="@+id/buttonViewDetails"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewTrailName"
            app:layout_constraintVertical_bias="0.5"/>
    <Button
            android:id="@+id/buttonViewDetails"
            android:layout_width="122dp"
            android:layout_height="68dp"
            android:text="View Details"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textViewTrailInfo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.5"/>
    <TextView
            android:id="@+id/textViewTrailName"
            android:layout_width="217dp"
            android:layout_height="33dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/buttonViewDetails" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textViewTrailInfo"/>
</androidx.constraintlayout.widget.ConstraintLayout>
